/* *, *:before, *:after
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box
*/

body
  left 0
  right 0
  margin auto

a, #mySidebar, body
    transition all .25s ease
a.slideButton, .dosearch
    position fixed
    display block
    width 40px
    height 40px
    top 10px
    z-index 17
.slideButton
    right 10px
.dosearch
    right rem(40px)
    border-radius rem(3px)
    padding rem(2px) rem(3px)
.icon-menu
    cursor pointer
    padding rem(5px)
    border-radius rem(3px)
    width rem(30px)
    height rem(30px)
    fill main
.icon-search
    width rem(32px)
    height rem(32px)

#mySidebar
    display none
    position fixed
    height 100%
    width rem(240px)
    top 0
    right rem(0px)
    background-color main
    z-index 2
    box-shadow inset -10px -1px 15px -9px rgba(0,0,0,0.5)
    h2
        text-align center
        margin 0 0 rem(10px)
        mainFont(800)
        font-size rem(20px)
        color sec
    nav
        height rem(640px)
        overflow-y auto
        overflow-x hidden
        ul
            padding 0
        li
            margin 0
            list-style-type none
            a
                width 100%
                display block
                padding rem(20px)
                text-decoration none
                mainFont(300)
                color sec
                border-top 1px solid sec
                &:hover
                    color main
                    background sec
        .feed
            border-bottom 1px solid sec
    &.slide
        right 0

.w3-animate-right
    position relative
    animation animateright 0.4s
    @keyframes animateright
        from
            right -300px
            opacity 0
        to
            right 0
            opacity 1

.w3-sidebar
    padding-top rem(100px)
    height 100%
    width rem(200px)
    position fixed
    z-index 1
    overflow auto
    background-color main
    +above(rem(1500px))
        &.w3-collapse
            display block!important

.w3-card
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)

.w3-bar-block .w3-bar-item
    width 100%
    display block
    padding 8px 16px
    text-align left
    border none
    white-space normal
    float none
    outline 0
    +above(rem(1500px))
        &.w3-hide-large
            display none!important
    +below(rem(1499px))
        &.w3-hide-large
            display block

.w3-large
    font-size rem(18px)

.w3-bar-block .w3-bar-item
    width 100%
    display block
    padding 8px 16px
    text-align left
    border none
    white-space normal
    float none
    outline 0

#mySidebar .w3-button
    border none
    display inline
    padding 8px 16px
    vertical-align middle
    overflow hidden
    text-decoration none
    color inherit
    background-color inherit
    cursor pointer
    white-space nowrap
    color white
    width auto
    font-size rem(24px)
    &:hover
        color main
        background sec