.share
    center(800px)
    text-align center
    border-top 1px solid lightGray
    display flex
    justify-content space-between
    article &
        border-top none
    svg
        margin rem(15px)
        size(35,35)
        +below(cut)
           size(16,16)
    a
        text-decoration none
        border none

.author .share
    center(800px)
    text-align center
    border-top 1px solid lightGray
//    padding-top rem(20px)
    article &
        border-top none
    a
        text-decoration none
        border none

.subscribe
    position fixed
    top 10px
    z-index 17
    right rem(90px)
    min-height rem(40px)
    a
      text-decoration none
    svg
       margin 0 rem(8px)
       size(32,32)
    +below(rem(768px))
       flex-basis 100%
       text-align center
       margin-bottom rem(16px)
       margin-top rem(-16px)
       position relative
       right 0
       min-height 0
       top 0
       z-index 0
        
